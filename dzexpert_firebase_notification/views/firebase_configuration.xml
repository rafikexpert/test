<odoo>

	  <record  id="view_dzexpert_firebase_configuration_form"  model="ir.ui.view">  
		<field  name="name">Expenses Category</field>  
		<field  name="model">dzexpert.firebase.configuration</field>  
		<field  name="arch"  type="xml">  
			<form duplicate="false" delete="false">  
				<header>
					 <button name="action_hello" 
						type="object"  string="Run Check" 
						id="toprint" class="oe_highlight"/>
											
					
                </header>
				<sheet>

					<div class="oe_button_box" name="button_box">    



							<button name="toggle_active"  type="object" class="oe_stat_button" icon="fa-archive">
								<field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
							</button>

					</div>
				
                    <field name="image_small" widget='image' class="oe_avatar" options='{"preview_image": "image_small", "size": [90, 90]}'/>
		                        					
                    <group>
						<group>
                            <field name="name" default_focus="1" string="Nom"/>
                            <field name="key" string="Token"/>
						</group>
                        <group>
                            <field name="type" options="{'no_create': True}" />
                        </group>
                    </group>				 
                    
                    <notebook>
						<page id="pg_descirptyin" string="Description">
							<field name="description" />
						</page>						
                    </notebook>                   
				</sheet>			
			</form>  
		</field>  
	  </record>
	  
	  
        <record id="view_dzexpert_firebase_configuration_tree" model="ir.ui.view">
            <field name="name">dzexpert.firebase.configuration.tree</field>
            <field  name="model">dzexpert.firebase.configuration</field>  
            <field name="arch" type="xml">
                <tree duplicate="false" delete="false">
					<field name="name"/>
					<field name="type" options="{'no_create': True}"/>
                    <field name="key" string="Token"/>
                </tree>
            </field>
        </record>
	  
         <record id="view_firebase_configuration_filter" model="ir.ui.view">
            <field name="name">dzexpert.unite</field>
            <field name="model">dzexpert.firebase.configuration</field>
            <field name="arch" type="xml">
                <search string="Search Requests">
                
					<separator/>		
					
					<field name="name"/>
					
               </search>
            </field>
        </record>
        
        <record id="action_firebase_configurations" model="ir.actions.act_window">
            <field name="name">Configuration</field>
            <field name="res_model">dzexpert.firebase.configuration</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>                   
        </record>	         
        	  
</odoo>
